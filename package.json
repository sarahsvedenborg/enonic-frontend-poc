{
  "name": "enonic-sanity-monorepo",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "apps/enonic-frontend",
    "apps/sanity-cms"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace enonic-frontend dev\" \"yarn workspace sanity-cms dev\"",
    "dev:enonic": "yarn workspace enonic-frontend dev",
    "dev:sanity": "yarn workspace sanity-cms dev",
    "build": "yarn workspace enonic-frontend build && yarn workspace sanity-cms build",
    "build:enonic": "yarn workspace enonic-frontend build",
    "build:sanity": "yarn workspace sanity-cms build",
    "lint": "yarn workspace enonic-frontend lint && yarn workspace sanity-cms lint",
    "lint:enonic": "yarn workspace enonic-frontend lint",
    "lint:sanity": "yarn workspace sanity-cms lint",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}